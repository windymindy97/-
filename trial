<body>

  <h1>🎰 추억의 뽑기판 (총 300칸)</h1>
  <div class="grid" id="grid"></div>
  <div class="result" id="result">클릭해서 상품을 뽑아보세요!</div>

  <script>
    const totalCells = 300;
    const prizePool = [];

    // 상품 구성: [상품등수, 개수]
    const prizes = [
      { rank: 1, count: 10 },
      { rank: 2, count: 30 },
      { rank: 3, count: 40 },
      { rank: 4, count: 100 },
      { rank: 5, count: 100 },
      { rank: 0, count: totalCells - (10 + 30 + 40 + 100 + 100) } // 꽝
    ];

    prizes.forEach(p => {
      for (let i = 0; i < p.count; i++) {
        prizePool.push(p.rank);
      }
    });

    // 랜덤 섞기
    prizePool.sort(() => Math.random() - 0.5);

    const grid = document.getElementById('grid');
    const result = document.getElementById('result');

    for (let i = 0; i < totalCells; i++) {
      const cell = document.createElement('div');
      cell.className = 'cell';
      cell.innerText = i + 1;
      cell.addEventListener('click', function () {
        if (cell.classList.contains('revealed')) return;
        const prize = prizePool[i];
        cell.classList.add('revealed');
        cell.innerText = prize === 0 ? '꽝' : `${prize}등`;
        if (prize !== 0) cell.classList.add(`rank-${prize}`);
        result.innerText = prize === 0 ? '😢 아쉽게도 꽝!' : `🎉 축하합니다! ${prize}등에 당첨되었어요!`;
      });
      grid.appendChild(cell);
    }
  </script>
</body>
