    }

    .grid {
      display: grid;
      grid-template-columns: repeat(20, 1fr);
      gap: 6px;
      max-width: 900px;
      margin: auto;
    }

    .cell {
      width: 40px;
      height: 40px;
      background: linear-gradient(145deg, #fdfaf6, #e9e0d1);
      border: 2px solid #c0a27d;
      box-shadow: inset -1px -1px 3px #fff, inset 1px 1px 2px #bbb;
      display: flex;
